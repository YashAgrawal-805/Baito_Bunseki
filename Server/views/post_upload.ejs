<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Face Detection</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            background-color: #f4f4f4;
            padding: auto;
            margin: auto;
        }
        h2 {
            color: #333;
        }
        .video-container {
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        video, canvas {
            width: 320px;
            height: 320px;
            border-radius: 50%;
            border: 5px solid #555;
            object-fit: cover;
        }
        .controls {
            margin-top: 15px;
        }
        .btn {
            background: #007bff;
            color: white;
            border: none;
            padding: 12px 20px;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.3s;
        }
        .btn:hover {
            background: #0056b3;
        }
        #fileInput {
            display: none;
        }
        .custom-file-upload {
            background: #28a745;
            color: white;
            padding: 12px 20px;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            display: inline-block;
            transition: 0.3s;
        }
        .custom-file-upload:hover {
            background: #218838;
        }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('navbar2.ejs') %>
    <div style="display: flex; align-items: center; flex-direction: column;margin-top: 30px;">
        <h2>Face Detection</h2>
    
        <div class="video-container">
            <video id="video" autoplay></video>
            <canvas id="canvas" style="display: none;"></canvas>
        </div>

        <div class="controls">
            <button class="btn" id="capture">Capture & Detect</button>
            <label for="fileInput" class="custom-file-upload">Upload Image</label>
            <input type="file" id="fileInput" accept="image/*">
        </div>

        <h3>Detection Result:</h3>
        <pre id="result"></pre>
        
    </div>
    <%- include('footer.ejs') %>
    <script src="/script.js"></script>
</body>
</html>
